@page
@model Shopping
@{
    ViewData["Title"] = "Shopping Cart";
}
<h1>@ViewData["Title"]</h1>
<table class="table table-sm table-light">
    <thead>
        <tr>
            <th scope="col">BookId</th>
            <th scope="col">Book Title</th>
            <th scope="col">Condition</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.bookTitles == null)
        {
            <tr>Your list is empty </tr>
        }else{
            @foreach (var i in Model.bookTitles)
            {
                <tr>
                    <td>@i.BookId</td>
                    <td>@i.Title</td>
                    <td>@i.Condition</td>
                    @if (i.Condition == "A")
                    {
                        <td>R150</td>
                    }
                    @if (i.Condition == "B")
                    {
                        <td>R100</td>
                    }
                     @if (i.Condition == "C")
                    {
                        <td>R50</td>
                    }

                    <td>
                        @using (Html.BeginForm("remove", "TblBorrows", FormMethod.Post))
                        {
                            <input type="hidden" value="@i.BookId" id="bookid" name="bookid" />
                            <input type="submit" value="delete" />
                        }
                          
                    </td>

                </tr>
            }
        }
        <!--Action method Controller, Get/PostMethod/-->
        <input type="button" value="Check out" onclick="location.href='@Url.Action("Index", "TblPayments")'" />
    </tbody>

    <table>
        <tr>
            <td align="right">R @TempData["priceTotal"]</td>
        </tr>
    </table>
</table>
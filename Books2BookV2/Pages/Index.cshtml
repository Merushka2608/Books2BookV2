	ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="author" content="SemiColonWeb" />

	<!-- Stylesheets
	============================================= -->
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700|Poppins:300,400,500,600,700|PT+Serif:400,400i&display=swap" rel="stylesheet" type="text/css" />
	<link rel="stylesheet" href="css/bootstrap.css" type="text/css" />
	<link rel="stylesheet" href="style.css" type="text/css" />
	<link rel="stylesheet" href="css/dark.css" type="text/css" />
	<link rel="stylesheet" href="css/font-icons.css" type="text/css" />
	<link rel="stylesheet" href="css/animate.css" type="text/css" />
	<link rel="stylesheet" href="css/magnific-popup.css" type="text/css" />

	<link rel="stylesheet" href="css/custom.css" type="text/css" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<!-- Document Title
	============================================= -->
	<title>Books-2-Book</title>

</head>

<body class="stretched">

	<!-- Docume t Wrapper
	============================================= -->
	<div id="wrapper" class="clearfix">

		<!-- Top Bar
		============================================= -->
		<div id="top-bar">
			<div class="container clearfix">

				<div class="row justify-content-between">
					<div class="col-12 col-md-auto">

						<a href="#" class="button button-mini button-rounded button-dark side-panel-trigger bottommargin">Menu</a>

						<!-- Logo
						============================================= -->
						<div id="logo">
							<div class="center">
								<a href="index.html" class="standard-logo" data-dark-logo="images/logo-dark.png"><img src="images/logo.png" alt="Books2Book Logo"></a>
							</div><!-- #logo end -->
							<div class="fancy-title title-border">
								<h1>Books-2-Book</h1>
							</div>
						</div>
						<div id="side-panel" class="dark">

							<div id="side-panel-trigger-close" class="side-panel-trigger"><a href="#"><i class="icon-line-cross"></i></a></div>

							<div class="side-panel-wrap">

								<div class="widget clearfix">

									<h4>Menu</h4>

									<nav class="nav-tree mb-0">
										<ul>
											<li>
												<a href="index.html"><i class="icon-home"></i>Home</a>
											</li>
											<li>
												<a href="~/Sales"><i class="icon-money"></i>Sell Your Books</a>
											</li>
											<li>
												<a href="faqs.html"><i class="icon-question"></i>FAQs</a>
											</li>
											<li>
												<a href="contact.html"><i class="icon-map-marker"></i>Contact Us</a>
												<ul>
													<li><i class="icon-envelope2"></i></li>
													<li>info@Books2Book.com</li>
													<li><i class="icon-phone1"></i>Cell:</li>
													<li>083 468 1461</li>
													<li><i class="icon-phone3"></i>Tel:</li>
													<li>032 943 1348</li>
												</ul>
											</li>
											<li>
												<a href="contact.html"><i class="icon-phone2"></i>Follow Us</a>
												<ul>
													<li><a href="#"><i class="icon-facebook"></i>Facebook</a></li>
													<li><a href="#"><i class="icon-github"></i>Github</a></li>
													<li><a href="#"><i class="icon-linkedin"></i>LinkedIn</a></li>
													<li><a href="#"><i class="icon-twitter"></i>Twitter</a></li>
												</ul>
											</li>
											<li>
												<a href="~/About"><i class="icon-book"></i>About</a>
											</li>
											<li>
												<a href="help.html"><i class="icon-question-circle"></i>Help</a>
											</li>
											<li>
												<a href="~/StatsDetails/Index"><i class="icon-graph"></i>Statistics</a>
											</li>
										</ul>
									</nav>

								</div>

							</div>

						</div>
					</div>
				</div>
			</div>
		</div><!-- #top-bar end -->

		<!-- Content
		============================================= -->

		<section id="slider" class="slider-element boxed-slider">

			<div class="container clearfix">

				<div class="fslider" data-animation="fade">
					<div class="flexslider">
						<div class="slider-wrap">
							<div class="slide" data-thumb="images/slider/boxed/thumbs/3.jpg">
								<a href="vidur.html" class="d-block position-relative">
									<img src="images/slide1.jpg" alt="Slide 1">
									<div class="bg-overlay">
										<div class="bg-overlay-content justify-content-start align-items-end">
											<div class="h3 fw-light py-2 px-3 bg-light text-dark ms-3 mb-3 rounded">Vidur's Site</div>
										</div>
									</div>
								</a>
							</div>
							<div class="slide" data-thumb="images/slider/boxed/thumbs/3.jpg">
								<a href="codesphere.html" class="d-block position-relative">
									<img src="images/slider.jpg" alt="Slide 2">
									<div class="bg-overlay">
										<div class="bg-overlay-content justify-content-end align-items-end">
											<div class="h3 fw-light py-2 px-3 bg-dark text-light me-3 mb-3 rounded">Codesphere's Site</div>
										</div>
									</div>
								</a>
							</div>
							<div class="slide" data-thumb="images/slider/boxed/thumbs/4.jpg">
								<a href="merushka.html" class="d-block position-relative">
									<img src="images/slide2.jpg" alt="Slide 3">
									<div class="bg-overlay">
										<div class="bg-overlay-content">
											<div class="h3 fw-light py-2 px-3 bg-color text-light rounded">Merushka's Site</div>
										</div>
									</div>
								</a>
							</div>
						</div>
					</div>
				</div>

			</div>

		</section>

		<section id="content">

			<div class="content-wrap">
				<div class="container clearfix">

					<div class="promo promo-dark p-5 bottommargin-lg">
						<div class="row align-items-center">
							<div class="col-12 col-lg">
								<h3>The hassle-free solution to your study woes</h3>
								<span>Rent any book for as little as <em>R100/month</em>! Simply pick up and drop off your rentals at your institution</span>
							</div>
							<div class="col-12 col-lg-auto mt-4 mt-lg-0">
								<a href="register.html" class="button button-reveal button-large button-circle text-end m-0"><i class="icon-angle-right"></i><span>Subscribe Now</span></a>
							</div>
						</div>
					</div>
				</div>
			</div>


			<div class="fancy-title title-border">
				<h3>Coding Books</h3>
			</div>

			<div class="content-wrap">
				<div class="container clearfix">
					<div id="oc-images" class="owl-carousel owl-carousel-full news-carousel header-stick bottommargin-lg carousel-widget" data-margin="3" data-loop="true" data-stage-padding="50" data-pagi="false" data-items-sm="1" data-items-xl="2">
						@foreach (var b in Model.codingBooks)
						{
							<div class="oc-item">

								<a href="#"><img src="images/book1.jpg" alt="Book"></a>
								<div class="bg-overlay">
									<div class="bg-overlay-content text-overlay-mask dark desc-sm align-items-end justify-content-start p-4">
										<div>
											<div class="portfolio-desc px-0">
												<h3>@b.Title</h3>
											</div>
											<a href="/TblBooks/Details?ID=@b.BookId" class="btn btn-sm btn-outline-light mx-0 mb-2">Borrow</a>
										</div>
									</div>
								</div>

							</div>
						}


					</div>


				</div>
			</div>

			<div class="fancy-title title-border">
				<h3>Business Books</h3>
			</div>

			<div class="content-wrap">
				<div class="container clearfix">
					<div id="oc-images" class="owl-carousel owl-carousel-full news-carousel header-stick bottommargin-lg carousel-widget" data-margin="3" data-loop="true" data-stage-padding="50" data-pagi="false" data-items-sm="1" data-items-xl="2">
						@foreach (var b in Model.businessBooks)
						{
							<div class="oc-item">

								<a href="#"><img src="images/book1.jpg" alt="Book"></a>
								<div class="bg-overlay">
									<div class="bg-overlay-content text-overlay-mask dark desc-sm align-items-end justify-content-start p-4">
										<div>
											<div class="portfolio-desc px-0">
												<h3>@b.Title</h3>
											</div>
											<a href="/TblBooks/Details?ID=@b.BookId" class="btn btn-sm btn-outline-light mx-0 mb-2">Borrow</a>
										</div>
									</div>
								</div>

							</div>
						}


					</div>


				</div>
			</div>
		</section><!-- #content end -->

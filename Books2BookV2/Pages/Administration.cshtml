			<div class="container clearfix">

				<div class="row justify-content-between">
					<div class="col-12 col-md-auto">

						<a href="#" class="button button-mini button-rounded button-dark side-panel-trigger bottommargin">Menu</a>

						<!-- Logo
						============================================= -->
						<div id="logo">
							<div class="center">
								<a href="#" class="standard-logo" data-dark-logo="images/logo-dark.png"><img src="~/images/logo1.png" alt="Books2Book Logo"></a>
							</div><!-- #logo end -->
							<div class="fancy-title title-border">
								<h1>Administration</h1>
							</div>
						</div>
						<div id="side-panel" class="dark">

							<div id="side-panel-trigger-close" class="side-panel-trigger"><a href="#"><i class="icon-line-cross"></i></a></div>

							<div class="side-panel-wrap">

								<div class="widget clearfix">

									<h4>Menu</h4>

									<nav class="nav-tree mb-0">
										<ul>
											<li>
												<a href="~/Index"><i class="icon-home"></i>Home</a>
											</li>
											<li>
												<a href="~/TblBooks/Index"><i class="icon-search"></i>Search For Books</a>
											</li>
											
												@if ((User.Identity.IsAuthenticated))
												{
													<li>
													<a href="~/Shopping"><i class="icon-shopping-cart"></i>Checkout</a>
													</li>
												}
											
											
											@if(User.Identity.IsAuthenticated){
												<li>
												<a href="~/TblImages/Create"><i class="icon-money"></i>Sell Your Books</a>
											</li>
											}
										
											<li>
												<a href="faqs.html"><i class="icon-question"></i>FAQs</a>
											</li>
											<li>
												<a href="contact.html"><i class="icon-phone2"></i>Contact Us</a>

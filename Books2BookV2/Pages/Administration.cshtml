												</ul>
											</li>
											<li>
												<a href="~/About"><i class="icon-book"></i>About</a>
											</li>
											<li>
												<a href="help.html"><i class="icon-question-circle"></i>Help</a>
											</li>
											<li>
												@if (User.IsInRole("Admin"))
												{
													<a href="~/StatsDetails/Index"><i class="icon-graph"></i>Statistics</a>

												}

											</li>
											<li>
												@if (User.IsInRole("Admin"))
												{
													<a href="~/Administration"><i class="icon-pencil"></i>Administration</a>

												}

											</li>
										</ul>
									</nav>

								</div>

							</div>

						</div>
					</div>
				</div>
			</div>
		</div><!-- #top-bar end -->

		<section id="content">
			<div class="content-wrap">
				<div class="container clearfix">
					<div class="fancy-title title-border title-center">
						<h2>Choose a Page Below</h2>
					</div>
					<div class="divider divider-center"><i class="icon-graph"></i></div>
					<div class="fancy-title title-border title-center">
						<h3>Statistics</h3>
					</div>
					<div class="center">
						<a href="~/StatsDetails/Index" class="button button-3d m-0 tab-linker" rel="5">Index</a>
					</div>
					<div class="divider divider-center"><i class="icon-book"></i></div>
					<div class="fancy-title title-border title-center">
						<h3>TblBooks</h3>
					</div>
					<div class="center">
						<a href="~/TblBooks/Create" class="button button-3d m-0 tab-linker" rel="1">Create</a>
						<a href="~/TblBooks/Index" class="button button-3d m-0 tab-linker" rel="5">Index</a>
					</div>
					<div class="divider divider-center"><i class="icon-picture"></i></div>
					<div class="fancy-title title-border title-center">
						<h3>TblImages</h3>
					</div>
					<div class="center">
						<a href="~/TblImages/Create" class="button button-3d m-0 tab-linker" rel="1">Create</a>
						<a href="~/TblImages/Index" class="button button-3d m-0 tab-linker" rel="5">Index</a>
					</div>

				</div>

			</div>

	</section>


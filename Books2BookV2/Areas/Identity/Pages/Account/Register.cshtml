@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="justify-content-center">
	<div class="col-md-4">
		<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<h2>Create a New Account</h2>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-floating">
				<input asp-for="Input.FirstName" class="form-control" autocomplete="on" aria-required="true" />
				<label asp-for="Input.FirstName"></label>
				<span asp-validation-for="Input.FirstName" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="Input.LastName" class="form-control" autocomplete="on" aria-required="true" />
				<label asp-for="Input.LastName"></label>
				<span asp-validation-for="Input.LastName" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="Input.Address" class="form-control" autocomplete="on" aria-required="true" />
				<label asp-for="Input.Address"></label>
				<span asp-validation-for="Input.Address" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="Input.SubscriptionType" type="text" class="form-control" aria-required="true" list="types" />
				<datalist id="types">
					<option>Standard</option>
					<option>Premium</option>
				</datalist>
				<label asp-for="Input.SubscriptionType"></label>
				<span asp-validation-for="Input.SubscriptionType" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="Input.Dob" class="form-control" autocomplete="on" aria-required="true" />
				<label asp-for="Input.Dob"></label>
				<span asp-validation-for="Input.Dob" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="Input.Institution" class="form-control" autocomplete="on" aria-required="true" />
				<label asp-for="Input.Institution"></label>
				<span asp-validation-for="Input.Institution" class="text-danger"></span>
			</div>

			<div class="form-floating">
				<input asp-for="Input.Email" class="form-control" autocomplete="on" aria-required="true" />
				<label asp-for="Input.Email"></label>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>

			<div class="form-floating">
				<input asp-for="Input.AccountNumber" class="form-control" autocomplete="on" aria-required="true" />
				<label asp-for="Input.AccountNumber"></label>
				<span asp-validation-for="Input.AccountNumber" class="text-danger"></span>
			</div>

			<div class="form-floating">
				<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
				<label asp-for="Input.Password"></label>
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
				<label asp-for="Input.ConfirmPassword"></label>
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

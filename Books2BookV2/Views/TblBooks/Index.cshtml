		<form asp-controller="TblBooksController" asp-action="Index">
			<p>
				Title: <input type="text" name="SearchString" />
				<input type="submit" value="Filter" />

				<label for="catagory">Genre</label>
				<select id="catagory" name="filterBy">
					<option value="All">All</option>
					<option value="Fiction">Fiction</option>
					<option value="Business">Business</option>
					<option value="Accounting">Accounting</option>
					<option value="Coding">Coding</option>
				</select>

			</p>
		</form>

		<p>
			<a asp-action="Create">Create New</a>
		</p>
		<table class="table">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Isbn)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Title)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Category)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.InStock)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Edition)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Pages)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Condition)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.NumberOfTimesBorrowed)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Description)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.AverageRating)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.DatePublished)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.AuthorId)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>

				@if (Model.Count() == 0)
				{
					<tr>
						<td colspan="3" style="color:red"> No Match in database </td>
					</tr>
				}
				else
				{

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Isbn)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Title)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Category)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.InStock)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Edition)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Pages)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Condition)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.NumberOfTimesBorrowed)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Description)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.AverageRating)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.DatePublished)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.AuthorId)
							</td>
							<td>
								@if (User.IsInRole("Admin"))
								{
									<a href="~/TblBooks/Edit?ID=@item.BookId" asp-action="Edit" asp-route-id="@item.BookId">Edit</a>
									<a href="~/TblBooks/Details?ID=@item.BookId" asp-action="Details" asp-route-id="@item.BookId">Details</a>
									<a href="~/TblBooks/Delete?ID=@item.BookId" asp-action="Delete" asp-route-id="@item.BookId">Delete</a>

								}
							</td>
						</tr>
					}
				}


			</tbody>

		</table>

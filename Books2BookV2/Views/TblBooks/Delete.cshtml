@model Books2BookV2.Models.TblBook

@{
	ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="author" content="SemiColonWeb" />

	<!-- Stylesheets
	============================================= -->
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700|Poppins:300,400,500,600,700|PT+Serif:400,400i&display=swap" rel="stylesheet" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/bootstrap.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/style.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/dark.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/font-icons.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/animate.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/magnific-popup.css")" type="text/css" />

	<link rel="stylesheet" href="@Url.Content("~/css/custom.css")" type="text/css" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<!-- Document Title
		============================================= -->
	<title>@ViewData["Title"]</title>

	<style>
		.process-steps li {
			pointer-events: none;
		}</style>

</head>

<body class="stretched">

	<!-- Document Wrapper
	============================================= -->
	<div id="wrapper" class="clearfix">

		<!-- Top Bar
		============================================= -->
		<div id="top-bar">
			<div class="container clearfix">

				<div class="row justify-content-between">
					<div class="col-12 col-md-auto">

						<!-- Logo
						============================================= -->
						<div id="logo">
							<div class="center">
								<a href="#" class="standard-logo" data-dark-logo="images/logo-dark.png"><img src="~/images/logo1.png" alt="Books2Book Logo"></a>
							</div><!-- #logo end -->
							<div class="fancy-title title-border">
								<h1>Books-2-Book</h1>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div><!-- #top-bar end -->
		<!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">
				<div class="container">
					<div>
						<div class="row justify-content-center m-3">
							<h1>@ViewData["Title"]</h1>
							<div class="col-sm-8">
								<div class="card">
									<div class="card-header" text-center>
										<h3>Are you sure you want to delete this?</h3>
									</div>

									<div class="card-body text-center">
										<h4>@Html.DisplayNameFor(model => model.BookId): @Html.DisplayFor(model => model.BookId) </h4>
										<h4>@Html.DisplayNameFor(model => model.Isbn): @Html.DisplayFor(model => model.Isbn) </h4>
										<h4>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title) </h4>
										<h4>@Html.DisplayNameFor(model => model.Category): @Html.DisplayFor(model => model.Category)</h4>
										<h4>@Html.DisplayNameFor(model => model.InStock): @Html.DisplayFor(model => model.InStock) </h4>
										<h4>@Html.DisplayNameFor(model => model.Edition): @Html.DisplayFor(model => model.Edition) </h4>
										<h4>@Html.DisplayNameFor(model => model.Pages): @Html.DisplayFor(model => model.Pages) </h4>
										<h4>@Html.DisplayNameFor(model => model.Condition): @Html.DisplayFor(model => model.Condition) </h4>
										<h4>@Html.DisplayNameFor(model => model.NumberOfTimesBorrowed): @Html.DisplayFor(model => model.NumberOfTimesBorrowed) </h4>
										<h4>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description) </h4>
										<h4>@Html.DisplayNameFor(model => model.RatingTotal): @Html.DisplayFor(model => model.RatingTotal) </h4>
										<h4>@Html.DisplayNameFor(model => model.DatePublished): @Html.DisplayFor(model => model.DatePublished) </h4>
										<h4>@Html.DisplayNameFor(model => model.NumberOfTimesRated): @Html.DisplayFor(model => model.NumberOfTimesRated) </h4>
										<h4>@Html.DisplayNameFor(model => model.AverageRating): @Html.DisplayFor(model => model.AverageRating) </h4>
										<h4>@Html.DisplayNameFor(model => model.Pdflink): @Html.DisplayFor(model => model.Pdflink) </h4>
									</div>
									<div text-center>
										<form action="DeleteBook" method="post">
											<input type="hidden" ="template-contactform-BookId" name="BookId" value="@Model.BookId" class="form-control required" />
											<input type="submit" value="Delete" class="btn btn-danger" /> 
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
					<button type="submit" value="Admin Page"><h5><a href="~/Administration">Admin Page</a></h5></button>
				</div>
			</div>
		</section><!-- #content end -->
		<!-- Footer
			============================================= -->
		<footer id="footer" class="dark">

			<!-- Copyrights
			============================================= -->
			<div id="copyrights">
				<div class="container">

					<div class="row col-mb-30">

						<div class="col-md-6 text-center text-md-start">
							Copyrights &copy; 2022 All Rights Reserved by Books-2-Book Inc.<br>
							<div class="copyright-links"><a href="terms.html">Terms of Use</a> / <a href="#">Privacy Policy</a></div>
						</div>

						<div class="col-md-6 text-center text-md-end">
							<div class="d-flex justify-content-center justify-content-md-end">
								<a href="#" class="social-icon si-small si-borderless si-facebook">
									<i class="icon-facebook"></i>
									<i class="icon-facebook"></i>
								</a>

								<a href="#" class="social-icon si-small si-borderless si-twitter">
									<i class="icon-twitter"></i>
									<i class="icon-twitter"></i>
								</a>

								<a href="#" class="social-icon si-small si-borderless si-github">
									<i class="icon-github"></i>
									<i class="icon-github"></i>
								</a>

								<a href="#" class="social-icon si-small si-borderless si-linkedin">
									<i class="icon-linkedin"></i>
									<i class="icon-linkedin"></i>
								</a>
							</div>

							<div class="clear"></div>

							<i class="icon-envelope2"></i> info@books2book.com
							<span class="middot">&middot;</span>
							<i class="icon-phone1"></i> 083 468 1461
							<span class="middot">&middot;</span>
							<i class="icon-phone3"></i> 032 943 1348
						</div>

					</div>

				</div>
			</div><!-- #copyrights end -->
		</footer><!-- #footer end -->


	</div><!-- #wrapper end -->
	<!-- JavaScripts
	============================================= -->
	<script src="/js/jquery.js"></script>

	<!-- Footer Scripts
	============================================= -->
	<script src="/js/functions.js"></script>

</body>
</html>

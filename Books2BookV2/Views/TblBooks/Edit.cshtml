					<div class="content-wrap bg-light">
						<div class="container">
							<div class="row justify-content-center">
								<div class="col-lg-7 col-md-10">
									<div class="card shadow-sm">
										<div class="card-header">
											<h4 class="mb-0">Enter Book Information</h4>
										</div>
										<div class="card-body">

											<div class="form-widget">

												<div class="form-result"></div>

												@*<div class="form-process">
												<div class="css3-spinner">
												<div class="css3-spinner-double-bounce1"></div>
												<div class="css3-spinner-double-bounce2"></div>
												</div>
												</div>*@

												<form action="EditBook" method="post" class="mb-0" id="template-contactform" enctype="multipart/form-data">
													<div class="row">

														<input type="hidden" ="template-contactform-BookId" name="BookId" value="@Model.BookId" class="form-control required" placeholder="Enter the ISBN of the Book" />
														<span asp-validation-for="Isbn" class="text-danger"></span>

														<div class="col-12 bottommargin-sm">
															<label for="Isbn">ISBN<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-isbn" name="Isbn" value="@Model.Isbn" class="form-control required" placeholder="Enter the ISBN of the Book" />
															<span asp-validation-for="Isbn" class="text-danger"></span>
														</div>
														<div class="col-12 bottommargin-sm">
															<label for="Title">Title<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-title" name="Title" value="@Model.Title" class="form-control required" placeholder="Enter the Title of the Book" />
															<span asp-validation-for="Isbn" class="text-danger"></span>
														</div>
														<div class="col-12 bottommargin-sm">
															<label for="Category">Category<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-category" name="Category" value="@Model.Category" class="form-control required" placeholder="Enter the Category of the Book" />
															<span asp-validation-for="Category" class="text-danger"></span>
														</div>
														<div class="col-12 bottommargin-sm">
															<label for="Stock">In Stock<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-isbn" name="Stock" value="@Model.InStock" class="form-control required" placeholder="Stock" />
															<span asp-validation-for="Stock" class="text-danger"></span>
														</div>
														<div class="col-12 bottommargin-sm">
															<label for="Isbn">Edition<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-isbn" name="Edition" value="@Model.Edition" class="form-control required" placeholder="Enter the Edition of the Book" />
															<span asp-validation-for="Edition" class="text-danger"></span>
														</div>
														<div class="col-12 bottommargin-sm">
															<label for="Pages">Number of Pages<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-isbn" name="Pages" value="@Model.Pages" class="form-control required" placeholder="Enter the Pages of the Book" />
															<span asp-validation-for="Pages" class="text-danger"></span>
														</div>
														<div class="col-12 bottommargin-sm">
															<label for="Condition">Condition<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-isbn" name="Condition" value="@Model.Condition" class="form-control required" placeholder="Enter the Condition of the Book" />
															<span asp-validation-for="Condition" class="text-danger"></span>
														</div>
														<div class="col-12 bottommargin-sm">
															<label for="NumberOfTimesBorrowed">Number of Times Borrowed<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-NumberOfTimesBorrowed" name="NumberOfTimesBorrowed" value="@Model.NumberOfTimesBorrowed" class="form-control required" placeholder="NumberOfTimesBorrowed" />
															<span asp-validation-for="NumberOfTimesBorrowed" class="text-danger"></span>
														</div>
														<div class="col-12 bottommargin-sm">
															<label for="Description">Description<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-Description" name="Description" value="@Model.Description" class="form-control required" placeholder="Description" />
															<span asp-validation-for="Description" class="text-danger"></span>
														</div>
														<div class="col-12 bottommargin-sm">
															<label for="RatingTotal">Rating Total<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-RatingTotal" name="RatingTotal" value="@Model.RatingTotal" class="form-control required" placeholder="RatingTotal" />
															<span asp-validation-for="RatingTotal" class="text-danger"></span>
														</div>
														<div class="col-12 bottommargin-sm">
															<label for="DatePublished">Date Published<small class="text-danger">*</small></label>
															<input type="text" id="template-contactform-DatePublished" name="DatePublished" value="@Model.DatePublished" class="form-control required" placeholder="DatePublished" />

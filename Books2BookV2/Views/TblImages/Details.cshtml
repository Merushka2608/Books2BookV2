@model Books2BookV2.Models.TblImage

@{
	ViewData["Title"] = "Details";
	string strPath = ViewData["Path"].ToString();
}

<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="author" content="SemiColonWeb" />

	<!-- Stylesheets
	============================================= -->
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700|Poppins:300,400,500,600,700|PT+Serif:400,400i&display=swap" rel="stylesheet" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/bootstrap.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/style.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/dark.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/font-icons.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/animate.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/css/magnific-popup.css")" type="text/css" />

	<link rel="stylesheet" href="@Url.Content("~/css/custom.css")" type="text/css" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<!-- Document Title
		============================================= -->
	<title>@ViewData["Title"]</title>

	<style>
		.process-steps li {
			pointer-events: none;
		}</style>

</head>

<body class="stretched">

	<!-- Document Wrapper
	============================================= -->
	<div id="wrapper" class="clearfix">

		<!-- Top Bar
		============================================= -->
		<div id="top-bar">
			<div class="container clearfix">

				<div class="row justify-content-between">
					<div class="col-12 col-md-auto">


						<!-- Logo
						============================================= -->
						<div id="logo">
							<div class="center">
								<a href="#" class="standard-logo" data-dark-logo="images/logo-dark.png"><img src="~/images/logo1.png" alt="Books2Book Logo"></a>
							</div><!-- #logo end -->
							<div class="fancy-title title-border">
								<h1>Books-2-Book</h1>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div><!-- #top-bar end -->
		<!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">
				<div class="container">
					<div>
						<div class="row justify-content-center m-3">
							<h1>@ViewData["Title"]</h1>
							<div class="col-sm-8">
								<div class="card">
									<div class="card-header">
										<h2>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title)</h2>
									</div>

									<div class="card-body text-center">
										<img class="card-img-top" src="@Url.Content("~" + Model.Image)" alt="not loaded" height="500" width="500" />
										<div>

											<h4>@Html.DisplayNameFor(model => model.Id): @Html.DisplayFor(model => model.Id) </h4>
											<h4>@Html.DisplayNameFor(model => model.Isbn): @Html.DisplayFor(model => model.Isbn) </h4>
											<h4>@Html.DisplayNameFor(model => model.Author): @Html.DisplayFor(model => model.Author) </h4>
											<h4>@Html.DisplayNameFor(model => model.DescriptionOfBook): @Html.DisplayFor(model => model.DescriptionOfBook)</h4>
											<h4>@Html.DisplayNameFor(model => model.UserEmailAddress): @Html.DisplayFor(model => model.UserEmailAddress) </h4>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					 <button type="submit"><h5><a href="~/Administration">Admin Page</a></h5></button>
					 </div>
				</div>
		</section><!-- #content end -->
		<!-- Footer
			============================================= -->
		<footer id="footer" class="dark">

			<!-- Copyrights
			============================================= -->
			<div id="copyrights">
				<div class="container">

					<div class="row col-mb-30">

						<div class="col-md-6 text-center text-md-start">
							Copyrights &copy; 2022 All Rights Reserved by Books-2-Book Inc.<br>
							<div class="copyright-links"><a href="terms.html">Terms of Use</a> / <a href="#">Privacy Policy</a></div>
						</div>

						<div class="col-md-6 text-center text-md-end">
							<div class="d-flex justify-content-center justify-content-md-end">
								<a href="#" class="social-icon si-small si-borderless si-facebook">
									<i class="icon-facebook"></i>
									<i class="icon-facebook"></i>
								</a>

								<a href="#" class="social-icon si-small si-borderless si-twitter">
									<i class="icon-twitter"></i>
									<i class="icon-twitter"></i>
								</a>

								<a href="#" class="social-icon si-small si-borderless si-github">
									<i class="icon-github"></i>
									<i class="icon-github"></i>
								</a>

								<a href="#" class="social-icon si-small si-borderless si-linkedin">
									<i class="icon-linkedin"></i>
									<i class="icon-linkedin"></i>
								</a>
							</div>

							<div class="clear"></div>

							<i class="icon-envelope2"></i> info@books2book.com
							<span class="middot">&middot;</span>
							<i class="icon-phone1"></i> 083 468 1461
							<span class="middot">&middot;</span>
							<i class="icon-phone3"></i> 032 943 1348
						</div>

					</div>

				</div>
			</div><!-- #copyrights end -->
		</footer><!-- #footer end -->


	</div><!-- #wrapper end -->
	<!-- JavaScripts
	============================================= -->
	<script src="/js/jquery.js"></script>

	<!-- Footer Scripts
	============================================= -->
	<script src="/js/functions.js"></script>

</body>
</html>